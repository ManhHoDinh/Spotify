<UserControl x:Class="Spotify.Views.Components.NavigateButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotify.Views.Components"
             mc:Ignorable="d" 
             >
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Image Source="{Binding IconSource}" Grid.Column="0"></Image>
        <TextBlock Grid.Column="1" Text="{Binding NavigateText}">
            <TextBlock.Style>
                <Style>
                    <Setter Property="TextBlock.FontSize" Value="18"></Setter>
                    <Setter Property="TextBlock.FontWeight" Value="Medium"></Setter>
                    <Setter Property="TextBlock.LineHeight" Value="22.77"></Setter>
                    <Setter Property="TextBlock.Foreground" Value="#ffffff"></Setter>
                    <Setter Property="TextBlock.Margin" Value="20 4.5 0 4.5"></Setter>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
    
</UserControl>
