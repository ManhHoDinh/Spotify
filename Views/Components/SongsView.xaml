<UserControl x:Class="Spotify.Views.Components.SongsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotify.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">
    <UserControl.Resources>
        <ControlTemplate x:Key="NonScrollableListView" TargetType="ListView">
            <ItemsPresenter/>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid Margin="0 24 0 0"
          Background="#121212">

            <ListView Template="{StaticResource NonScrollableListView}" x:Name="ListViewSong" Width="1224" SelectionChanged="ListViewSong_SelectionChanged" ItemsSource="{Binding listSong}" Background="Transparent" BorderBrush="Transparent">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="AntiqueWhite"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <Border Cursor="Hand" CornerRadius="8" BorderThickness="0"  Height="72">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <Trigger Property="Border.IsMouseOver" Value="True">
                                                        <Setter Property="Border.Background" Value="#5b5a5e"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="475"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="300"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock  Grid.Column="0" Text="{Binding Path=Id,Mode=OneWay}" Foreground="#ffffff" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="center" HorizontalAlignment="Left">
                                                <Image Width="40" Source="/Resource/Icons/Heart.png" Margin="0 0 20 0"/>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Path=NameSong,Mode=OneWay}" Foreground="#ffffff" FontSize="20"/>
                                                    <TextBlock Text="{Binding Path=Namesinger,Mode=OneWay}" Foreground="#b3b3b3" FontSize="18"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" Text="Play it sale" FontSize="18" Foreground="#b3b3b3" VerticalAlignment="Center"/>
                                            <Grid  Grid.Column="3" HorizontalAlignment="Right">
                                                <Button  Tag="{Binding isFavor, ElementName=BottomControl}" Template="{DynamicResource HeartStyle}"  Style="{StaticResource ControlBtn}">
                                                    <Button.Background>
                                                        <ImageBrush ImageSource="{StaticResource HeartFillButton}"/>
                                                    </Button.Background>
                                                </Button>
                                            </Grid>
                                            <TextBlock Text="hhaha" Grid.Column="4" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
